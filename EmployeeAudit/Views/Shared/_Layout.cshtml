<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - EmployeeAudit</title>
  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
  @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/cyborg.min.css" rel="stylesheet" />*@
  <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
  <link rel="stylesheet" href="~/EmployeeAudit.styles.css" asp-append-version="true" />
</head>
<body>
  <header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow text-white">
      <div class="container-fluid">
        <a class="navbar-brand border-end fw-bolder" style="color: orange" asp-area="" asp-controller="Home" asp-action="Index">Employee Audit &nbsp;</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
          <ul class="navbar-nav flex-grow-1">
            <li class="nav-item">
              <a class="nav-link text-light fw-bolder" asp-area="" asp-controller="Employees" asp-action="Index">Employees</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-success fw-bolder" asp-area="" asp-controller="AuditLog" asp-action="Index">Audit Log</a>
            </li>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                APIs
              </a>
              <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                <li><a class="dropdown-item" href="/api/audit">Audit Logs</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" href="/api/emp">Employees</a></li>
                <li><a class="dropdown-item" href="/api/product">Products</a></li>
                <li><a class="dropdown-item" href="/api/service">Services</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" href="/api/emp/contries">Contries</a></li>
                <li><a class="dropdown-item" href="/api/emp/states">States</a></li>
                <li><a class="dropdown-item" href="/api/emp/cities">Cities</a></li>
              </ul>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  </header>
  <div class="container">
    <main role="main" class="pb-3">
      <partial name="_Notification" />
      @RenderBody()
    </main>
  </div>

  <footer class="border-top footer text-muted" style="">
    <div class="container">
      &copy; 2023 - EmpAddrAudit - Privacy
    </div>
  </footer>
  <script src="~/lib/jquery/dist/jquery.min.js"></script>
  <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script src="~/js/site.js" asp-append-version="true"></script>
  @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
