@model EmployeeAudit.Models.Employee

<h2>@ViewData["Title"]</h2>

<form asp-action="Create">
  <table class="container">
    <tr>
      <th>
        <label asp-for="Name">Name</label>
      </th>
      <td>
        <input asp-for="Name" class="form-control" placeholder="First Middle Surname" required />
        <span asp-validation-for="name" class="text-danger"></span>
      </td>
    </tr>
    <tr>
      <th>
        <label asp-for="Phone">Phone</label>
      </th>
      <td>
        <input type="number" placeholder="XXXXXXXXXX" required pattern="^\d{10}$" minlength="10" maxlength="15" asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
      </td>
    </tr>
    <tr>
      <th>
        <label asp-for="Address.Country">Country</label>
      </th>
      <td>
        <select asp-for="Address.Country" asp-items="@(new SelectList(ViewBag.Countries, "country_name", "country_name"))" class="form-control" id="countryDropdown" required>
          <option selected disabled>--Select a Country--</option>
        </select>
        <span asp-validation-for="Address.Country" class="text-danger"></span>
      </td>
    </tr>
    <tr>
      <th>
        <label asp-for="Address.State">State</label>
      </th>
      <td>
        <select asp-for="Address.State" class="form-control" id="stateDropdown" required>
          <option selected disabled>--Select a Country--</option>
        </select>
        <span asp-validation-for="Address.State" class="text-danger"></span>
      </td>
    </tr>
    <tr>
      <th>
        <label asp-for="Address.City">City</label>
      </th>
      <td>
        <select asp-for="Address.City" class="form-control" id="citiesDropdown" required>
          <option selected disabled>--Select a Country--</option>
        </select>
        <span asp-validation-for="Address.City" class="text-danger"></span>
      </td>
    </tr>
    <tr>
      <th>
        <label asp-for="Address.ZipCode">ZipCode</label>
      </th>
      <td>
        <input asp-for="Address.ZipCode" class="form-control" type="number" maxlength="6" placeholder="Zip Code / Postal Code" required />
        <span asp-validation-for="Address.ZipCode" class="text-danger"></span>
      </td>
    </tr>
    <tr>
      <th>
        <a asp-action="Index" class="m-2 p-0 w-2">
          <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-arrow-left-square" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M15 2a1 1 0 0 0-1-1H2a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2zM0 2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2zm11.5 5.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5z" />
          </svg>
        </a>
      </th>
      <td>
        <button type="submit" class="m-2 p-0 w-2 text-success" style="border:none; background: none">
          <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-person-plus" viewBox="0 0 16 16">
            <path d="M6 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H1s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C9.516 10.68 8.289 10 6 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z" />
            <path fill-rule="evenodd" d="M13.5 5a.5.5 0 0 1 .5.5V7h1.5a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0V8h-1.5a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5z" />
          </svg>
        </button>
      </td>
    </tr>
  </table>
</form>

@section Scripts {
  <script src="~/lib/jquery/dist/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

  <script>
    $(document).ready(function () {
      // When a country is selected, fetch the corresponding states
      $("#countryDropdown").change(function () {
        var selectedCountry = $(this).val();
        if (selectedCountry) {
          $.ajax({
            type: "GET",
            url: "/Employees/GetStates",
            data: { country: selectedCountry },
            dataType: "json",
            success: function (data) {
              var stateDropdown = $("#citiesDropdown");
              stateDropdown.empty();
              stateDropdown.append("<option selected disabled>--Select a State--</option>");
              var stateDropdown = $("#stateDropdown");
              stateDropdown.empty();
              stateDropdown.append("<option selected disabled>--Select a State--</option>");
              $.each(data, function (index, state) {
                stateDropdown.append($("<option></option>").attr("value", state.state_name).text(state.state_name));
              });
            },
            error: function (xhr, status, error) {
              console.error(error);
            }
          });
        }
      });

      // When a state is selected, fetch the corresponding cities
      $("#stateDropdown").change(function () {
        var selectedState = $(this).val();
        if (selectedState) {
          $.ajax({
            type: "GET",
            url: "/Employees/GetCities",
            data: { state: selectedState },
            dataType: "json",
            success: function (data) {
              var cityDropdown = $("#citiesDropdown");
              cityDropdown.empty();
              cityDropdown.append("<option selected disabled>--Select a City--</option>");
              $.each(data, function (index, city) {
                cityDropdown.append($("<option></option>").attr("value", city.city_name).text(city.city_name));
              });
            },
            error: function (xhr, status, error) {
              console.error(error);
            }
          });
        }
      });

      // Client-side validation using jquery.validate.js
      $("#form").validate();
    });
  </script>
}