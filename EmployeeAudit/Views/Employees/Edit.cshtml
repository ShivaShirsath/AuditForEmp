@model EmployeeAudit.Models.Employee

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" id="edit">
  <input type="hidden" asp-for="EmployeeId" />
  <table>
    <tr>
      <th>
        @Html.DisplayNameFor(model => model.Name)
      </th>
      <td>
        <input asp-for="Name" class="form-control" placeholder="[First Name] [Middle Name] [SurName]" required />
        <span asp-validation-for="Name" class="text-danger"></span>
      </td>
    </tr>
    <tr>
      <th>
        @Html.DisplayNameFor(model => model.Phone)
      </th>
      <td>
        <input type="number" placeholder="XXXXXXXXXX" required pattern="^\d{10}$" minlength="10" maxlength="15" asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
      </td>
    </tr>
    <tr>
      <th>
        @Html.DisplayNameFor(model => model.Address.Country)
      </th>
      <td>
        <select asp-for="Address.Country" asp-items="@(new SelectList(ViewBag.Countries, "country_name", "country_name"))" class="form-control" id="countryDropdown" required>
          <option selected disabled>--Select a Country--</option>
        </select>
        <span asp-validation-for="Address.Country" class="text-danger"></span>
      </td>
    </tr>
    <tr>
      <th>
        @Html.DisplayNameFor(model => model.Address.State)
      </th>
      <td>
        <input asp-for="Address.State" class="form-control" minlength="3" placeholder="State (Full Name of State)" required />
        <span asp-validation-for="Address.State" class="text-danger"></span>
      </td>
    </tr>
    <tr>
      <th>
        @Html.DisplayNameFor(model => model.Address.City)
      </th>
      <td>
        <input asp-for="Address.City" class="form-control" minlength="3" placeholder="City / Nearby City" required />
        <span asp-validation-for="Address.City" class="text-danger"></span>
      </td>
    </tr>
    <tr>
      <th>
        @Html.DisplayNameFor(model => model.Address.ZipCode)
      </th>
      <td>
        <input asp-for="Address.ZipCode" class="form-control" type="number" maxlength="6" placeholder="Zip Code / Postal Code" required />
        <span asp-validation-for="Address.ZipCode" class="text-danger"></span>
      </td>
    </tr>
    <tr>
      <th>
        <a asp-action="Index" class="m-2 p-0 w-2">
          <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-arrow-left-square" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M15 2a1 1 0 0 0-1-1H2a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2zM0 2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2zm11.5 5.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5z" />
          </svg>
        </a>
      </th>
      <td style="display:flex; align-items:start; justify-content:space-around;">
        <button type="submit" class="m-2 p-0 text-success" style="background:none; border: none">
          <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-file-earmark-check" viewBox="0 0 16 16">
            <path d="M10.854 7.854a.5.5 0 0 0-.708-.708L7.5 9.793 6.354 8.646a.5.5 0 1 0-.708.708l1.5 1.5a.5.5 0 0 0 .708 0l3-3z" />
            <path d="M14 14V4.5L9.5 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2zM9.5 3A1.5 1.5 0 0 0 11 4.5h2V14a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h5.5v2z" />
          </svg>
        </button>
        <a asp-action="Delete" asp-route-id="@Model.EmployeeId" class="text-danger">
          <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z" />
            <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z" />
          </svg>
        </a>
      </td>
    </tr>
  </table>
</form>

@section Scripts {
  <script src="~/lib/jquery/dist/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
  <script>
    $(document).ready(function () {
      $("#form").validate();
    });
  </script>
}